<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_fragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/result_frg_is_vegan_tv"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_is_vegan_tv_true"
        android:textSize="220sp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/result_frg_name_tv"
        android:layout_below="@id/result_frg_is_vegan_tv"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_name_tv"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/result_frg_add_btn"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_add_btn"
        android:onClick="addButtonClick" />

    <TextView
        android:id="@+id/result_frg_add_tv"
        android:layout_below="@id/result_frg_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_add_tv" />

    <TextView
        android:id="@+id/result_frg_barcode_tv"
        android:layout_below="@id/result_frg_add_btn"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_barcode_tv" />

    <EditText
        android:hint="@string/result_frg_enter_name_hint"
        android:id="@+id/result_frg_enter_name"
        android:layout_below="@id/result_frg_barcode_tv"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <RadioGroup
        android:checkedButton="@+id/result_frg_is_vegan_dont_know_rb"
        android:id="@+id/result_frg_is_vegan_rg"
        android:layout_below="@id/result_frg_enter_name"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <RadioButton
            android:id="@+id/result_frg_is_vegan_yes_rb"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/result_frg_is_vegan_yes_rb"/>

        <RadioButton
            android:id="@+id/result_frg_is_vegan_no_rb"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/result_frg_is_vegan_no_rb"/>

        <RadioButton
            android:id="@id/result_frg_is_vegan_dont_know_rb"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/result_frg_is_vegan_dont_know_rb"/>

    </RadioGroup>

    <EditText
        android:hint="@string/result_frg_enter_comment_et_hint"
        android:id="@+id/result_frg_enter_comment_et"
        android:layout_below="@id/result_frg_is_vegan_rg"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:id="@+id/result_frg_send_data_btn"
        android:layout_below="@id/result_frg_enter_comment_et"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_send_data_btn"
        android:onClick="sendToDatabase" />

    <TextView
        android:id="@+id/result_frg_thanks_tv"
        android:layout_below="@id/result_frg_add_btn"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/result_frg_thanks_tv" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:src="@drawable/fab_barcode" />

</RelativeLayout>